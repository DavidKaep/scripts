#!/bin/sh


load=$(lf -remote 'load')
mode=$(echo "$load" | sed -n '1p')
list=$(echo "$load" | sed '1d')
if [ $mode = 'copy' ]; then
    list=$(echo "$list" | tr "\n" " ")
    cp -r --reflink=auto $(echo $list) .
    notify-send "ðŸ“‹ copied files"
elif [ $mode = 'move' ]; then
        list=$(echo "$list" | tr "\n" " ")
        mv $(echo $list) -t .
        notify-send "ðŸšš moved files"
fi
lf -remote 'send load'
lf -remote 'send clear'
