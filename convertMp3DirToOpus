#!/bin/bash


Inpu=""
Outpu=""
IFS=$'\n'
set -f
for line in $(find . -name "*.mp3" | awk -F "\n" '/(mp3)/ {print $0}'); do
	echo $line
	Inpu=$(echo $line | awk -F "\n" '{print $1}')
	Outpu=$(echo $line | awk -F "\n" '/(mp3)/ {sub (/(mp3)/, "opus"); print $0}')
	ffmpeg -hwaccel auto -i $Inpu -c:a libopus -b:a 192k $Outpu
	rm $Inpu
done
